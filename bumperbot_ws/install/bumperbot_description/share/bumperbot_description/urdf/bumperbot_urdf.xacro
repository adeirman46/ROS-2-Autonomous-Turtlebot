<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="turtlebot">

    <link name="base_footprint"/>

	<!-- Base Link -->
	<link name="base_link">
		<visual>
			<origin rpy="0 0 0" xyz="0 0 0"></origin>
		<geometry>
			<mesh filename="package://bumperbot_description/meshes/base_link.STL"></mesh>
		</geometry>
		</visual>
	</link>

	<!-- Wheel Links -->
	<link name="right_wheel"> 
		<visual>
			<origin rpy="1.57 0 0" xyz="0 0 0"></origin>
		<geometry>
			<mesh filename="package://bumperbot_description/meshes/wheel_right_link.STL"></mesh>
		</geometry>
		</visual>
	</link>

	<link name="left_wheel"> 
		<visual>
			<origin rpy="-1.57 0 0" xyz="0 0 0"></origin>
		<geometry>
			<mesh filename="package://bumperbot_description/meshes/wheel_left_link.STL"></mesh>
		</geometry>
		</visual>
	</link>

	<!-- Caster Wheel Link -->
	<link name="caster_wheel_front">
		<visual>
			<origin rpy="0 0 0" xyz="0 0 0"></origin>
		<geometry>
			<mesh filename="package://bumperbot_description/meshes/caster_front_link.STL"></mesh>
		</geometry>
		</visual>
	</link> 

	<link name="caster_wheel_rear">
		<visual>
			<origin rpy="0 0 0" xyz="0 0 0"></origin>
		<geometry>
			<mesh filename="package://bumperbot_description/meshes/caster_rear_link.STL"></mesh>
		</geometry>
		</visual>
	</link> 

	<!-- Sensor Link
	<link name="sensor">
		<visual>
		<geometry>
			<cylinder length="0.1" radius="0.05"/>
		</geometry>
		</visual>
	</link> -->

	<!-- Joints -->
	<joint name="base_joint" type="fixed">
		<parent link="base_footprint"/>
		<child link="base_link"/>
		<origin xyz="0 0 0.033" rpy="0 0 0"/>
	</joint>
	
	<joint name="right_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="right_wheel"/>
		<origin xyz="0 -0.07 0" rpy="0 0 0"/>
		<axis xyz="0 1 0"/>
	</joint>

	<joint name="left_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="left_wheel"/>
		<origin xyz="0 0.07 0" rpy="0 0 0"/>
		<axis xyz="0 1 0"/>
	</joint>

	<joint name="caster_wheel_front_joint" type="fixed">
		<parent link="base_link"/>
		<child link="caster_wheel_front"/>
		<origin xyz="0.04755 0 -0.0275" rpy="0 0 0"/>
	</joint>

	<joint name="caster_wheel_rear_joint" type="fixed">
		<parent link="base_link"/>
		<child link="caster_wheel_rear"/>
		<origin xyz="-0.04755 0 -0.0275" rpy="0 0 0"/>
	</joint>

	<!-- <joint name="sensor_joint" type="fixed">
		<parent link="base_link"/>
		<child link="sensor"/>
		<origin xyz="0 0 0.15" rpy="0 0 0"/>
	</joint> -->

</robot>